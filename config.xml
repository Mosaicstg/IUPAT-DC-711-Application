<?xml version="1.0" encoding="UTF-8"?>
<widget id="com.mosaicstg.dc711"
        version="2.1.0"
        ios-CFBundleVersion="3.0.0"
        android-versionCode="300"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>DC 711</name>
    <description>IUPAT DC 711 App</description>
    <author href="https://mosaicstg.com" email="services@mosaicstg.com">Mosaic</author>

    <content src="index.html"/>

    <!-- Access -->
    <access origin="*"/>

    <!-- Allow-Intent -->
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>

    <!-- Plugins -->
    <plugin name="cordova-plugin-battery-status" source="npm"/>
    <plugin name="cordova-plugin-calendar" source="npm">
        <variable name="CALENDAR_USAGE_DESCRIPTION" value="App would like to access the calendar to add events."/>
    </plugin>
    <plugin name="cordova-plugin-device" source="npm"/>
    <plugin name="cordova-plugin-dialogs" source="npm"/>
    <plugin name="cordova-plugin-file" source="npm"/>
    <plugin name="cordova-plugin-file-transfer" source="npm"/>
    <plugin name="cordova-plugin-geolocation" source="npm"/>
    <plugin name="cordova-plugin-globalization" source="npm"/>
    <plugin name="cordova-plugin-inappbrowser" source="npm"/>
    <plugin name="cordova-plugin-network-information" source="npm"/>
    <plugin name="cordova-plugin-splashscreen" source="npm"/>
    <plugin name="cordova-plugin-vibration" source="npm"/>
    <plugin name="pushbots-cordova-plugin" source="npm"/>
    <plugin name="cordova-plugin-whitelist" source="npm"/>
    <plugin name="cordova-plugin-statusbar" source="npm"/>

    <!-- Preferences -->
    <preference name="Orientation" value="portrait"/>
    <!-- iOS only preferences -->
    <preference name="target-device" value="universal"/>
    <preference name="TopActivityIndicator" value="white"/>
    <!-- Android only preferences -->
    <preference name="KeepRunning" value="false"/>

    <!-- Platforms -->
    <!-- iOS -->
    <platform name="ios">
        <!-- Allow-Intent -->
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>

        <!-- Icons -->

    </platform>

    <!-- Android -->
    <platform name="android">
        <!-- Allow-Intent -->
        <allow-intent href="market:*"/>

        <!-- Icons -->

    </platform>
</widget>
